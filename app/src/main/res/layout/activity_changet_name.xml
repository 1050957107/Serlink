<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".activity.headinfo.ChangetNameActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group3"
        android:layout_marginTop="8dp"
        android:text="4-20个字符，可由中英文、数字、 “_”、“-”组成"
        android:textSize="12sp"
        android:textColor="#999999"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="#F7F7F7"
        android:id="@+id/group3"
        app:layout_constraintTop_toBottomOf="@id/nc_name"
        >
        <TextView
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#333333"
            android:textSize="14sp"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_code_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="修改昵称"
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="保存"
            android:textColor="#14BA9A"
            android:textSize="14sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="#F2FCFA"
        android:id="@+id/group2"
        app:layout_constraintTop_toBottomOf="@id/group1"
        >
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置后，其他人将看到你的昵称"
            android:textColor="#14BA9A"
            android:textSize="12sp"
            />
    </LinearLayout>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/group2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称:"
        android:id="@+id/nc_name"
        android:textColor="#999999"
        android:textSize="12sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>